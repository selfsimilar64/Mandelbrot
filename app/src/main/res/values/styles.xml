<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <!-- <item name="android:statusBarColor">@android:color/transparent</item> -->
        <item name="android:navigationBarColor">@color/black</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="color">@color/white</item>
        <item name="background">@color/black</item>
    </style>


    <style name="CardDark" parent="CardView.Dark">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardBackgroundColor">@color/colorPrimaryDark</item>
        <item name="cardCornerRadius">5dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="contentPaddingLeft">10dp</item>
        <item name="contentPaddingRight">10dp</item>
        <item name="contentPaddingTop">5dp</item>
        <item name="contentPaddingBottom">5dp</item>
    </style>

    <style name="TextDark" parent="android:style/Widget.Material.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start|center_vertical</item>
        <item name="android:textColor">@color/colorDarkText</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextDescriptionDark" parent="android:style/Widget.Material.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start|center_vertical</item>
        <item name="android:textColor">@color/colorDescriptionDark</item>
        <item name="android:textSize">13sp</item>
        <item name="android:maxLines">3</item>
        <item name="android:layout_marginBottom">7dp</item>
    </style>

    <style name="EditTextDark" parent="android:style/Widget.Material.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textColor">@color/colorDarkText</item>
        <item name="android:gravity">end</item>
        <item name="android:textSize">15sp</item>
        <item name="android:inputType">numberDecimal|numberSigned</item>
        <item name="android:digits">0123456789.,-</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:layout_marginTop">-4dp</item>
        <item name="android:layout_marginBottom">-4dp</item>
    </style>

    <style name="SwitchDark" parent="@style/Widget.AppCompat.CompoundButton.Switch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textColor">@color/colorDarkText</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColorPrimaryDisableOnly">#b71c1c</item>
        <item name="android:colorControlActivated">#1b5e20</item>
        <item name="android:colorForeground">#f57f17</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
        <item name="android:thumb">@drawable/switch_thumb_custom</item>
        <item name="android:track">@drawable/switch_track_custom</item>
    </style>

    <style name="SpinnerDark">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">37dp</item>
        <item name="android:backgroundTint">@color/colorDarkText</item>
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:popupBackground">#0a0a0a</item>
    </style>

    <style name="DividerDark">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:background">@color/colorDarkSelected</item>
    </style>

    <style name="LockDark">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textOn"> </item>
        <item name="android:textOff"> </item>
        <item name="android:foreground">@drawable/lock_state_selector</item>
        <item name="android:foregroundGravity">center</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="CardBodySection">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:background">@color/colorDarkUnselected</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="MapParamLayoutDark">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorDarkUnselected</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>

    <style name="MenuImageButtonDark">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:tint">#fff</item>
    </style>

    <style name="MenuButtonDark">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FragmentItem">
        <item name="android:background">@drawable/rounded_rect</item>
        <item name="android:backgroundTint">@color/menu4</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:layout_marginTop">@dimen/fragmentLayoutMargin</item>
        <item name="android:layout_marginBottom">@dimen/fragmentLayoutMargin</item>
    </style>

</resources>
