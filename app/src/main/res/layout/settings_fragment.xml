<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    android:paddingStart="10dp"
    android:paddingTop="15dp"
    android:paddingEnd="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="5dip">

        <TextView
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:text="Resolution"
            android:textSize="14sp"
            android:textStyle="bold" />

        <android.support.design.widget.TabLayout
            android:id="@+id/resolutionTabs"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            app:tabBackground="@drawable/tab_color_selector"
            app:tabIndicatorColor="@android:color/transparent"
            app:tabIndicatorFullWidth="true"
            app:tabIndicatorGravity="bottom">

            <android.support.design.widget.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LOW" />

            <android.support.design.widget.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MED" />

            <android.support.design.widget.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HIGH" />

            <android.support.design.widget.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ULTRA" />
        </android.support.design.widget.TabLayout>
    </LinearLayout>

    <View
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimaryDarkSelected" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dip"
        android:paddingBottom="5dip">

        <TextView
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:text="Precision"
            android:textSize="14sp"
            android:textStyle="bold" />

        <android.support.design.widget.TabLayout
            android:id="@+id/precisionTabs"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            app:tabBackground="@drawable/tab_color_selector"
            app:tabIndicatorColor="@android:color/transparent"
            app:tabIndicatorFullWidth="true"
            app:tabIndicatorGravity="bottom">

            <android.support.design.widget.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SINGLE" />

            <android.support.design.widget.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DUAL" />

            <android.support.design.widget.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AUTO" />
        </android.support.design.widget.TabLayout>
    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimaryDarkSelected" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dip"
        android:showDividers="middle">

        <Switch
            android:id="@+id/continuousRenderSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true"
            android:paddingEnd="10dip"
            android:showText="false"
            android:text="Continuous render"
            android:textColor="@android:color/secondary_text_dark"
            android:textStyle="bold" />

        <View
            android:id="@+id/divider4"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:background="@color/colorPrimaryDarkSelected" />

        <Switch
            android:id="@+id/displayParamsSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="10dip"
            android:text="Display params"
            android:textColor="@android:color/secondary_text_dark"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>