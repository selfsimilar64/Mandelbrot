<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0a0a0a"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView2"
                style="@style/TextDark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="render"
                android:textAllCaps="true"
                android:textSize="15sp"
                android:textStyle="normal" />

            <android.support.v7.widget.CardView
                style="@style/CardDark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingVertical="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextDark"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start|center_vertical"
                            android:text="Resolution"
                            android:textColor="@color/colorDarkText"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <android.support.design.widget.TabLayout
                            android:id="@+id/resolutionTabs"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            app:tabBackground="@drawable/tab_color_selector"
                            app:tabIndicatorColor="@android:color/transparent"
                            app:tabIndicatorFullWidth="true"
                            app:tabIndicatorGravity="bottom"
                            app:tabPaddingEnd="10dp"
                            app:tabPaddingStart="10dp">

                            <android.support.design.widget.TabItem
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="LOW" />

                            <android.support.design.widget.TabItem
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="MED" />

                            <android.support.design.widget.TabItem
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="HIGH" />

                        </android.support.design.widget.TabLayout>
                    </LinearLayout>

                    <View
                        android:id="@+id/divider2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="15dp"
                        android:background="#333" />

                    <Switch
                        android:id="@+id/continuousRenderSwitch"
                        style="@style/SwitchDark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Continuous Render" />

                    <View
                        android:id="@+id/divider3"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="15dp"
                        android:background="#333" />

                    <Button
                        android:id="@+id/saveToFileButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#1a1a1a"
                        android:drawableTop="@drawable/baseline_save_alt_black_36"
                        android:drawablePadding="5dp"
                        android:drawableTint="#ddd"
                        android:text="Save" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/textView4"
                style="@style/TextDark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="UI"
                android:textAllCaps="true"
                android:textSize="15sp"
                android:textStyle="normal" />

            <android.support.v7.widget.CardView
                style="@style/CardDark"
                android:layout_width="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingVertical="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView3"
                            style="@style/TextDark"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Display Parameters" />

                        <Switch
                            android:id="@+id/displayParamsSwitch"
                            style="@style/SwitchDark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:paddingStart="10dip"
                            android:textColor="@color/colorDarkText"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/textView"
                style="@style/TextDark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="advanced"
                android:textAllCaps="true"
                android:textSize="15sp"
                android:textStyle="normal" />

            <android.support.v7.widget.CardView
                style="@style/CardDark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingVertical="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextDark"
                            android:layout_width="90dip"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start|center_vertical"
                            android:text="Precision"
                            android:textColor="@color/colorDarkText"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <android.support.design.widget.TabLayout
                            android:id="@+id/precisionTabs"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            app:tabBackground="@drawable/tab_color_selector"
                            app:tabIndicatorColor="@android:color/transparent"
                            app:tabIndicatorFullWidth="true"
                            app:tabIndicatorGravity="bottom"
                            app:tabPaddingEnd="10dp"
                            app:tabPaddingStart="10dp">

                            <android.support.design.widget.TabItem
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="SINGLE" />

                            <android.support.design.widget.TabItem
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="DUAL" />

                            <android.support.design.widget.TabItem
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="AUTO" />
                        </android.support.design.widget.TabLayout>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>


</LinearLayout>