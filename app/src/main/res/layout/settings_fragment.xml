<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0a0a0a"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="15dp">

            <android.support.v7.widget.CardView
                android:id="@+id/renderCard"
                style="@style/CardDark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/renderCardLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/renderHeaderButton"
                        style="@style/cardHeaderButtonDark"
                        android:text="Render"
                        android:textAllCaps="false" />

                    <LinearLayout
                        android:id="@+id/renderCardBody"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingBottom="10dp">

                        <View
                            android:id="@+id/divider"
                            style="@style/dividerDark"
                            android:layout_width="match_parent"
                            android:layout_height="1dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/TextDark"
                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start|center_vertical"
                                android:text="Resolution"
                                android:textColor="@color/colorDarkText"
                                android:textSize="14sp" />

                            <android.support.design.widget.TabLayout
                                android:id="@+id/resolutionTabs"
                                android:layout_width="match_parent"
                                android:layout_height="42dp"
                                app:tabBackground="@drawable/tab_color_selector"
                                app:tabIndicatorColor="@android:color/transparent"
                                app:tabIndicatorFullWidth="true"
                                app:tabIndicatorGravity="bottom"
                                app:tabPaddingEnd="10dp"
                                app:tabPaddingStart="10dp">

                                <android.support.design.widget.TabItem
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="LOW" />

                                <android.support.design.widget.TabItem
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="MED" />

                                <android.support.design.widget.TabItem
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="HIGH" />

                            </android.support.design.widget.TabLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/TextDark"
                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start|center_vertical"
                                android:text="Precision"
                                android:textColor="@color/colorDarkText" />

                            <android.support.design.widget.TabLayout
                                android:id="@+id/precisionTabs"
                                android:layout_width="match_parent"
                                android:layout_height="42dp"
                                app:tabBackground="@drawable/tab_color_selector"
                                app:tabIndicatorColor="@android:color/transparent"
                                app:tabIndicatorFullWidth="true"
                                app:tabIndicatorGravity="bottom"
                                app:tabPaddingEnd="10dp"
                                app:tabPaddingStart="10dp">

                                <android.support.design.widget.TabItem
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="SINGLE" />

                                <android.support.design.widget.TabItem
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="DUAL" />

                                <android.support.design.widget.TabItem
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="AUTO" />
                            </android.support.design.widget.TabLayout>
                        </LinearLayout>

                        <Switch
                            android:id="@+id/continuousRenderSwitch"
                            style="@style/SwitchDark"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Continuous Render" />

                        <Button
                            android:id="@+id/saveToFileButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginTop="15dp"
                            android:background="#0000"
                            android:clickable="true"
                            android:drawableTop="@drawable/save"
                            android:drawablePadding="10dp"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackgroundBorderless"
                            android:paddingTop="15dp"
                            android:paddingBottom="10dp"
                            android:text="Save" />

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/uiCard"
                style="@style/CardDark"
                android:layout_width="match_parent">

                <LinearLayout
                    android:id="@+id/uiCardLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/uiHeaderButton"
                        style="@style/cardHeaderButtonDark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="UI" />

                    <LinearLayout
                        android:id="@+id/uiCardBody"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingBottom="10dp">

                        <View
                            android:id="@+id/divider2"
                            style="@style/dividerDark"
                            android:layout_width="match_parent"
                            android:layout_height="1dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView3"
                                style="@style/TextDark"
                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Display Parameters" />

                            <Switch
                                android:id="@+id/displayParamsSwitch"
                                style="@style/SwitchDark"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:textColor="@color/colorDarkText"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>


</LinearLayout>