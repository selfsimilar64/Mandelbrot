                    <com.selfsimilartech.fractaleye.GradientImageButton
                        android:id="@+id/aspect916Button"
                        style="@style/AspectRatioButton"
                        android:layout_width="37dp"
                        android:layout_height="66dp"
                        android:padding="5dp"
                        android:scaleType="centerInside"
                        app:srcCompat="@drawable/aspect_9_16" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView android:id="@+id/aspect12Card">

                    <com.selfsimilartech.fractaleye.GradientImageButton
                        android:id="@+id/aspect12Button"
                        style="@style/AspectRatioButton"
