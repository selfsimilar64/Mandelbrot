<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="15dp">

        <android.support.v7.widget.CardView
            android:id="@+id/functionCard"
            style="@style/CardDark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/functionCardLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/functionHeaderButton"
                    style="@style/cardHeaderButtonDark"
                    android:text="@string/shape" />


                <LinearLayout
                    android:id="@+id/functionCardBody"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingBottom="10dp">

                    <View
                        android:id="@+id/view2"
                        style="@style/dividerDark" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/display_params_bg_visible"
                        android:backgroundTint="#333"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/complexMapSpinner"
                            style="@style/SpinnerDark"
                            android:layout_width="match_parent"
                            android:layout_height="37dp"
                            android:popupBackground="#0a0a0a" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/complexMapKatexLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@color/colorDarkUnselected"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="10dp"
                        android:paddingStart="10dp"
                        android:paddingTop="10dp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="10dp">

                        <katex.hourglass.in.mathlib.MathView
                            android:id="@+id/complexMapKatex"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            app:setClickable="true"
                            app:setTextColor="@color/colorPrimary" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/p1EditRow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:background="@color/colorDarkUnselected"
                        android:orientation="vertical"
                        android:paddingStart="10dp"
                        android:paddingTop="5dp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="5dp"
                        tools:ignore="RtlSymmetry">

                        <TextView
                            style="@style/TextDark"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="@string/param1"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:paddingStart="2dp"
                            android:paddingEnd="3dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:text="u" />

                            <EditText
                                android:id="@+id/p1xEdit"
                                style="@style/EditTextDark"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:imeOptions="actionNext" />

                            <ImageButton
                                android:id="@+id/p1uLock"
                                style="@style/LockDark" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:paddingStart="2dp"
                            android:paddingEnd="3dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:text="v" />

                            <EditText
                                android:id="@+id/p1yEdit"
                                style="@style/EditTextDark"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:imeOptions="actionDone" />

                            <ImageButton
                                android:id="@+id/p1vLock"
                                style="@style/LockDark" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/p2EditRow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:background="@color/colorDarkUnselected"
                        android:orientation="vertical"
                        android:paddingStart="10dp"
                        android:paddingTop="5dp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="5dp"
                        tools:ignore="RtlSymmetry">

                        <TextView
                            style="@style/TextDark"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="@string/param2"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:paddingStart="2dp"
                            android:paddingEnd="3dp">

                            <TextView
                                android:id="@+id/textView4"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:text="u" />

                            <EditText
                                android:id="@+id/p2xEdit"
                                style="@style/EditTextDark"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:imeOptions="actionNext" />

                            <ImageButton
                                android:id="@+id/p2uLock"
                                style="@style/LockDark"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:paddingStart="2dp"
                            android:paddingEnd="3dp">

                            <TextView
                                android:id="@+id/textView8"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:text="v" />

                            <EditText
                                android:id="@+id/p2yEdit"
                                style="@style/EditTextDark"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:imeOptions="actionDone" />

                            <ImageButton
                                android:id="@+id/p2vLock"
                                style="@style/LockDark"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/p3EditRow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:background="@color/colorDarkUnselected"
                        android:orientation="vertical"
                        android:paddingStart="10dp"
                        android:paddingTop="5dp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="5dp"
                        tools:ignore="RtlSymmetry">

                        <TextView
                            style="@style/TextDark"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="@string/param3"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:paddingStart="2dp"
                            android:paddingEnd="3dp">

                            <TextView
                                android:id="@+id/textView6"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:text="u" />

                            <EditText
                                android:id="@+id/p3xEdit"
                                style="@style/EditTextDark"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:imeOptions="actionNext" />

                            <ImageButton
                                android:id="@+id/p3uLock"
                                style="@style/LockDark"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:paddingStart="2dp"
                            android:paddingEnd="3dp">

                            <TextView
                                android:id="@+id/textView9"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:text="v" />

                            <EditText
                                android:id="@+id/p3yEdit"
                                style="@style/EditTextDark"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:imeOptions="actionDone" />

                            <ImageButton
                                android:id="@+id/p3vLock"
                                style="@style/LockDark"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/p4EditRow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:background="@color/colorDarkUnselected"
                        android:orientation="vertical"
                        android:paddingStart="10dp"
                        android:paddingTop="5dp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="5dp"
                        tools:ignore="RtlSymmetry">

                        <TextView
                            style="@style/TextDark"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="@string/param4"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:paddingStart="2dp"
                            android:paddingEnd="3dp">

                            <TextView
                                android:id="@+id/textView7"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:text="u" />

                            <EditText
                                android:id="@+id/p4xEdit"
                                style="@style/EditTextDark"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:imeOptions="actionNext" />

                            <ImageButton
                                android:id="@+id/p4uLock"
                                style="@style/LockDark"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:paddingStart="2dp"
                            android:paddingEnd="3dp">

                            <TextView
                                android:id="@+id/textView10"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:text="v" />

                            <EditText
                                android:id="@+id/p4yEdit"
                                style="@style/EditTextDark"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:imeOptions="actionDone" />

                            <ImageButton
                                android:id="@+id/p4vLock"
                                style="@style/LockDark"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/juliaLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <Switch
                            android:id="@+id/juliaModeSwitch"
                            style="@style/SwitchDark"
                            android:text="@string/juliaMode"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextDark"
                            android:layout_weight="1"
                            android:text="@string/bailout" />

                        <EditText
                            android:id="@+id/bailoutSignificandEdit"
                            style="@style/EditTextDark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:imeOptions="actionNext"
                            android:selectAllOnFocus="true" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/e" />

                        <EditText
                            android:id="@+id/bailoutExponentEdit"
                            style="@style/EditTextDark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:imeOptions="actionDone" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextDark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/detail" />

                        <SeekBar
                            android:id="@+id/maxIterBar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:progress="25" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/textureCard"
            style="@style/CardDark"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/textureCardLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/textureHeaderButton"
                    style="@style/cardHeaderButtonDark"
                    android:text="@string/texture" />

                <LinearLayout
                    android:id="@+id/textureCardBody"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingBottom="10dp">

                    <View
                        android:id="@+id/view3"
                        style="@style/dividerDark" />

                    <LinearLayout
                        android:id="@+id/textureSpinnerLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/display_params_bg_visible"
                        android:backgroundTint="#333"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/textureAlgSpinner"
                            style="@style/SpinnerDark"
                            android:layout_width="match_parent" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/q1EditRow"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:paddingStart="10dp"
                        tools:ignore="RtlSymmetry" >

                        <TextView
                            style="@style/TextDark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tex_param1" />

                        <SeekBar
                            android:id="@+id/q1Bar"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1" />

                        <EditText
                            android:id="@+id/q1Edit"
                            style="@style/EditTextDark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:imeOptions="actionDone"
                            android:selectAllOnFocus="true" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/q2EditRow"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:paddingStart="10dp"
                        tools:ignore="RtlSymmetry" >

                        <TextView
                            style="@style/TextDark"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/tex_param2" />

                        <EditText
                            android:id="@+id/q2Edit"
                            style="@style/EditTextDark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:imeOptions="actionDone"
                            android:selectAllOnFocus="true" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/colorCard"
            style="@style/CardDark"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/colorCardLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/colorHeaderButton"
                    style="@style/cardHeaderButtonDark"
                    android:text="@string/color" />

                <LinearLayout
                    android:id="@+id/colorCardBody"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingBottom="10dp">

                    <View
                        android:id="@+id/view5"
                        style="@style/dividerDark" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/display_params_bg_visible"
                        android:backgroundTint="@color/colorDarkSelected"
                        android:orientation="vertical">

                        <Spinner
                            android:id="@+id/colorPaletteSpinner"
                            style="@style/SpinnerDark"
                            android:layout_width="match_parent" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="1dp" >

                        <TextView
                            style="@style/TextDark"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/frequency" />

                        <EditText
                            android:id="@+id/frequencyEdit"
                            style="@style/EditTextDark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:imeOptions="actionDone"
                            android:selectAllOnFocus="true" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="1dp">

                        <TextView
                            style="@style/TextDark"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/offset" />

                        <EditText
                            android:id="@+id/phaseEdit"
                            style="@style/EditTextDark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:imeOptions="actionDone"
                            android:selectAllOnFocus="true" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/positionCard"
            style="@style/CardDark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/positionCardLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/positionHeaderButton"
                    style="@style/cardHeaderButtonDark"
                    android:text="@string/position" />

                <LinearLayout
                    android:id="@+id/positionCardBody"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="10dp">

                    <View
                        android:id="@+id/view4"
                        style="@style/dividerDark" />

                    <LinearLayout
                        android:id="@+id/positionParams"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/TextDark"
                                android:layout_weight="1"
                                android:text="@string/x" />

                            <EditText
                                android:id="@+id/xCoordEdit"
                                style="@style/EditTextDark"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:imeOptions="actionNext" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/TextDark"
                                android:layout_weight="1"
                                android:text="@string/y" />

                            <EditText
                                android:id="@+id/yCoordEdit"
                                style="@style/EditTextDark"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:imeOptions="actionDone" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/TextDark"
                                android:layout_weight="1"
                                android:text="@string/scale" />

                            <EditText
                                android:id="@+id/scaleSignificandEdit"
                                style="@style/EditTextDark"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:imeOptions="actionNext"
                                android:selectAllOnFocus="true" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/e" />

                            <EditText
                                android:id="@+id/scaleExponentEdit"
                                style="@style/EditTextDark"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:imeOptions="actionDone" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>
</ScrollView>