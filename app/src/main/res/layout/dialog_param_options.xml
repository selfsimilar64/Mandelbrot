<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/ui_component_bg"
    android:orientation="vertical"
    android:padding="10dp">

    <Button
        android:id="@+id/paramResetButton"
        style="@style/SubMenuButton"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:drawableStart="@drawable/reset"
        android:text="@string/reset"
        android:textSize="14sp" />

    <Button
        android:id="@+id/paramFromPositionButton"
        style="@style/SubMenuButton"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:drawableStart="@drawable/position"
        android:drawablePadding="8dp"
        android:text="@string/set_from_position"
        android:textSize="14sp" />
</LinearLayout>