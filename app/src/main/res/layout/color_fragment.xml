<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/colorLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/menu2"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/colorPreviewListLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/colorPreviewList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/menu1"
            android:orientation="horizontal"
            android:scrollbars="horizontal"
            android:visibility="visible"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            tools:listitem="@layout/color_preview_item" />

        <Button
            android:id="@+id/previewDoneButton"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/doneButtonHeight"
            android:layout_gravity="end"
            android:background="?attr/selectableItemBackground"
            android:text="done" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/colorContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:paddingEnd="10dp"
        android:paddingBottom="5dp"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/colorPreview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:padding="3dp">

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                app:cardBackgroundColor="@color/colorTransparent"
                app:cardCornerRadius="18dp">

                <ImageView
                    android:id="@+id/colorPreviewImage"
                    android:layout_width="300dp"
                    android:layout_height="35dp" />

            </android.support.v7.widget.CardView>


            <TextView
                android:id="@+id/colorPreviewName"
                style="@style/TextDark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|top"
                android:paddingTop="3dp"
                android:paddingBottom="2dp"
                android:text="Palette Name"
                android:textAlignment="center"
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp">

                <TextView
                    style="@style/TextDark"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/offset" />

                <EditText
                    android:id="@+id/phaseEdit"
                    style="@style/EditTextDark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionDone"
                    android:selectAllOnFocus="true" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp">

                <TextView
                    style="@style/TextDark"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/frequency" />

                <EditText
                    android:id="@+id/frequencyEdit"
                    style="@style/EditTextDark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionDone"
                    android:selectAllOnFocus="true" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>