                android:id="@+id/rotateButton"
                style="@style/MenuNavToggleButton"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:drawableTop="@drawable/rotate"
                android:text="@string/rotate" />

            <Button
                android:id="@+id/shiftHorizontalButton"
                style="@style/MenuNavToggleButton"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:drawableTop="@drawable/shift_horizontal"
                android:text="@string/shift" />

            <Button
                android:id="@+id/shiftVerticalButton"
                style="@style/MenuNavToggleButton"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:drawableTop="@drawable/shift_vertical"
                android:text="@string/shift" />

            <View
                android:id="@+id/divider5"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:background="@color/menuDark7" />

            <Button
                android:id="@+id/resetPositionButton"
                style="@style/MenuNavToggleButton"
                android:layout_width="75dp"
                android:alpha="1.0"
                android:background="?attr/selectableItemBackground"
                android:drawableTop="@drawable/reset"
                android:text="@string/reset" />
        </LinearLayout>
    </LinearLayout>
