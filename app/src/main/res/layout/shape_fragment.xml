<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/shapeLayout"
    android:layout_width="match_parent"
    android:layout_height="175dp"
    android:background="@color/menu2"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/shapeContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <include
            android:id="@+id/shapePreview"
            layout="@layout/preview_item" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/shapeParamLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="5dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp">

                    <android.support.design.widget.TabLayout
                        android:id="@+id/shapeParamButtons"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/menu1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tabIndicatorFullWidth="true">

                        <android.support.design.widget.TabItem
                            android:id="@+id/p1Button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="P1" />

                        <android.support.design.widget.TabItem
                            android:id="@+id/p2Button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="P2" />

                        <android.support.design.widget.TabItem
                            android:id="@+id/p3Button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="P3" />

                    </android.support.design.widget.TabLayout>

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@color/menu1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/shapeParamButtons">

                        <TextView
                            android:id="@+id/uLabel"
                            style="@style/TextDark"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_marginStart="16dp"
                            android:gravity="center_vertical"
                            android:text="u"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/vLabel"
                            style="@style/TextDark"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_marginStart="16dp"
                            android:gravity="center_vertical"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:text="v"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/uLabel" />

                        <ToggleButton
                            android:id="@+id/uLock"
                            style="@style/LockDark"
                            android:layout_width="30dp"
                            android:layout_height="40dp"
                            android:layout_marginEnd="8dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ToggleButton
                            android:id="@+id/vLock"
                            style="@style/LockDark"
                            android:layout_width="30dp"
                            android:layout_height="40dp"
                            android:layout_marginEnd="8dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/uLock" />

                        <EditText
                            android:id="@+id/uEdit"
                            style="@style/EditTextDark"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:imeOptions="actionNext"
                            app:layout_constraintEnd_toStartOf="@id/uLock"
                            app:layout_constraintTop_toTopOf="parent" />

                        <EditText
                            android:id="@+id/vEdit"
                            style="@style/EditTextDark"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:imeOptions="actionDone"
                            app:layout_constraintEnd_toStartOf="@id/vLock"
                            app:layout_constraintTop_toBottomOf="@id/uEdit" />
                    </android.support.constraint.ConstraintLayout>

                </android.support.constraint.ConstraintLayout>

                <LinearLayout
                    android:id="@+id/juliaLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp">

                    <Switch
                        android:id="@+id/juliaModeSwitch"
                        style="@style/SwitchDark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:paddingBottom="5dp"
                        android:text="@string/juliaMode"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="#222" />
                </LinearLayout>

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp">

                    <TextView
                        android:id="@+id/maxIterLabel"
                        style="@style/TextDark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:text="@string/maxIter"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:id="@+id/maxIterEdit"
                        style="@style/EditTextDark"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <SeekBar
                        android:id="@+id/maxIterBar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_weight="1"
                        android:progress="25"
                        android:progressDrawable="@drawable/seekbar_progress_custom"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/maxIterLabel" />
                </android.support.constraint.ConstraintLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/shapePreviewList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/menu1"
        android:orientation="horizontal"
        android:scrollbars="horizontal"
        android:visibility="gone"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
        tools:listitem="@layout/preview_item">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>
