<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/shapeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:background="@color/menu2"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/maxIterLayout"
        style="@style/FragmentItem"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragmentItemHeight">

        <EditText
            android:id="@+id/maxIterEdit"
            style="@style/EditNumberDark"
            android:imeOptions="actionDone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.selfsimilartech.fractaleye.SeekBar2
            android:id="@+id/maxIterBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:max="1000"
            android:progress="0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/maxIterEdit" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/less_detail"
            app:layout_constraintBottom_toTopOf="@+id/maxIterBar"
            app:layout_constraintStart_toStartOf="@+id/maxIterBar" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/faster"
            app:layout_constraintBottom_toTopOf="@+id/textView"
            app:layout_constraintStart_toStartOf="@+id/maxIterBar" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="@string/more_detail"
            app:layout_constraintBottom_toTopOf="@+id/maxIterBar"
            app:layout_constraintEnd_toEndOf="@+id/maxIterBar" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="@string/slower"
            app:layout_constraintBottom_toTopOf="@+id/textView3"
            app:layout_constraintEnd_toEndOf="@+id/maxIterBar" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/realParamLayout"
        style="@style/FragmentItem"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragmentItemHeight"
        android:visibility="visible">

        <com.selfsimilartech.fractaleye.SeekBar2
            android:id="@+id/realParamSeekBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:max="500"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/uEdit2" />

        <EditText
            android:id="@+id/uEdit2"
            style="@style/EditNumberDark"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:imeOptions="actionDone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/complexParamLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragmentItemHeight"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="190dp"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/uLabel"
                style="@style/TextDark"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="48dp"
                android:gravity="center_vertical"
                android:text="@string/u" />

            <EditText
                android:id="@+id/uEdit"
                style="@style/EditNumberDark"
                android:layout_width="wrap_content"
                android:imeOptions="actionDone" />

            <ToggleButton
                android:id="@+id/uLock"
                style="@style/LockDark"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="190dp"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/linearLayout3">

            <TextView
                android:id="@+id/vLabel"
                style="@style/TextDark"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="48dp"
                android:gravity="center_vertical"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="@string/v" />

            <EditText
                android:id="@+id/vEdit"
                style="@style/EditNumberDark"
                android:layout_width="wrap_content"
                android:imeOptions="actionDone" />

            <ToggleButton
                android:id="@+id/vLock"
                style="@style/LockDark"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp" />
        </LinearLayout>

        <ToggleButton
            android:id="@+id/linkParamButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:background="@color/transparent"
            android:foreground="@drawable/link"
            android:foregroundTint="@color/colorDarkSelected"
            android:textOff="@string/empty"
            android:textOn="@string/empty"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/linearLayout3"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/shapePreviewLayout"
        style="@style/FragmentItem"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragmentItemHeight"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="2dp"
        android:paddingBottom="2dp">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            app:cardBackgroundColor="@color/transparent"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/shapePreviewImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="@string/dscript_shape_preview"
                android:tint="@color/menu2"
                android:tintMode="add"
                app:srcCompat="@drawable/mandelbrot_icon" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/shapePreviewText"
            style="@style/TextDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/edit"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="@string/shape_name"
            android:textAlignment="center"
            android:textSize="16sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/shapePreviewListLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:animateLayoutChanges="true"
        android:orientation="vertical"
        tools:visibility="visible">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="@dimen/fragmentItemCornerRadius">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/shapePreviewList"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fragmentItemHeightTall"
                android:background="@color/menu4"
                android:orientation="vertical"
                android:scrollbars="vertical"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:spanCount="3"
                tools:itemCount="6"
                tools:listitem="@layout/texture_shape_preview_item_grid">

            </androidx.recyclerview.widget.RecyclerView>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/shapeNavButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/shapeListViewTypeButton"
            style="@style/MenuNavButton"
            android:layout_height="@dimen/navButtonSize"
            android:drawableTop="@drawable/list_view"
            android:text="@string/view" />

        <Button
            android:id="@+id/shapeDoneButton"
            style="@style/MenuNavButton"
            android:layout_height="@dimen/navButtonSize"
            android:drawableTop="@drawable/done"
            android:text="@string/done" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/shapeSubMenuButtons"
        android:layout_width="match_parent"
        android:layout_height="@dimen/menuButtonsHeight"
        android:animateLayoutChanges="true"
        android:orientation="horizontal">

        <HorizontalScrollView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/shapePreviewButton"
                    style="@style/MenuNavToggleButton"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:drawableTop="@drawable/shape_preview"
                    android:text="@string/shape" />

                <Button
                    android:id="@+id/maxIterButton"
                    style="@style/MenuNavToggleButton"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:drawableTop="@drawable/iterate"
                    android:text="@string/max_iter" />

                <Button
                    android:id="@+id/juliaParamButton"
                    style="@style/MenuNavToggleButton"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:drawableTop="@drawable/parameter"
                    android:text="@string/julia" />

                <Button
                    android:id="@+id/shapeParamButton1"
                    style="@style/MenuNavToggleButton"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:drawableTop="@drawable/parameter"
                    android:text="@string/param1" />

                <Button
                    android:id="@+id/shapeParamButton2"
                    style="@style/MenuNavToggleButton"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:drawableTop="@drawable/parameter"
                    android:text="@string/param2" />

                <Button
                    android:id="@+id/shapeParamButton3"
                    style="@style/MenuNavToggleButton"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:drawableTop="@drawable/parameter"
                    android:text="@string/param3" />

                <Button
                    android:id="@+id/shapeParamButton4"
                    style="@style/MenuNavToggleButton"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:drawableTop="@drawable/parameter"
                    android:text="@string/param4" />
            </LinearLayout>
        </HorizontalScrollView>

        <View
            android:id="@+id/divider6"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/menu3" />

        <Button
            android:id="@+id/shapeResetButton"
            style="@style/MenuNavButton"
            android:background="?attr/selectableItemBackground"
            android:drawableTop="@drawable/reset"
            android:text="@string/reset" />

        <com.selfsimilartech.fractaleye.ToggleButton
            android:id="@+id/juliaModeButton"
            style="@style/MenuNavToggleButton"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:drawableTop="@drawable/julia"
            android:text="@string/julia" />

    </LinearLayout>

</LinearLayout>
