                <!--                </androidx.cardview.widget.CardView>-->

            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/resolutionLayout"
        style="@style/FragmentItem"
        android:layout_width="match_parent"
        android:backgroundTint="@color/menuDark5"
        android:orientation="vertical">

        <TextView
            style="@style/TextDescriptionDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="4dp"
            android:text="@string/resolution_high"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/resolutionBar"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            style="@style/TextDescriptionDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="4dp"
            android:text="@string/resolution_low"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@id/resolutionBar"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/resolutionDimensionsText"
            style="@style/TextDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:text="@string/resolution_dims"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.selfsimilartech.fractaleye.SeekBar2
            android:id="@+id/resolutionBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:max="5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/resolutionDimensionsText" />

    </androidx.constraintlayout.widget.ConstraintLayout>

