                        app:srcCompat="@drawable/aspect_instagram_45" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/aspect57Card"
                    style="@style/AspectRatioButtonCard">

                    <com.selfsimilartech.fractaleye.GradientImageButton
                        android:id="@+id/aspect57Button"
                        style="@style/AspectRatioButton"
                        android:layout_width="42dp"
                        android:layout_height="59dp"
                        android:padding="7dp"
                        android:scaleType="centerInside"
                        app:srcCompat="@drawable/aspect_5_7" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/aspect23Card"
                    style="@style/AspectRatioButtonCard">

                    <com.selfsimilartech.fractaleye.GradientImageButton
                        android:id="@+id/aspect23Button"
                        style="@style/AspectRatioButton"
                        android:layout_width="40dp"
                        android:layout_height="61dp"
                        android:padding="6dp"
                        android:scaleType="centerInside"
                        app:srcCompat="@drawable/aspect_2_3" />
                </androidx.cardview.widget.CardView>

                <!--                <androidx.cardview.widget.CardView-->
                <!--                    android:id="@+id/aspect169Card"-->
                <!--                    style="@style/AspectRatioButtonCard">-->

                <!--                    <ImageButton-->
                <!--                        android:id="@+id/aspect169Button"-->
