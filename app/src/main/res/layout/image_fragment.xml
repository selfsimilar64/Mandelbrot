                        android:layout_height="66dp"
                        android:padding="5dp"
                        android:scaleType="centerInside"
                        app:srcCompat="@drawable/aspect_9_16" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/aspect12Card"
                    style="@style/AspectRatioButtonCard">

                    <com.selfsimilartech.fractaleye.GradientImageButton
                        android:id="@+id/aspect12Button"
                        style="@style/AspectRatioButton"
                        android:layout_width="35dp"
                        android:layout_height="70dp"
                        android:padding="4dp"
                        android:scaleType="centerInside"
                        app:srcCompat="@drawable/aspect_1_2" />
                </androidx.cardview.widget.CardView>

                <!--                <androidx.cardview.widget.CardView-->
                <!--                    android:id="@+id/aspect13Card"-->
                <!--                    style="@style/AspectRatioButtonCard">-->

                <!--                    <ImageButton-->
                <!--                        android:id="@+id/aspect13Button"-->
                <!--                        style="@style/AspectRatioButton"-->
                <!--                        android:layout_width="35dp"-->
