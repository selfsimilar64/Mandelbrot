    <LinearLayout
        android:id="@+id/imageSubMenuButtons"
        android:layout_width="match_parent"
        android:layout_height="@dimen/menuButtonHeight"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bookmarkListButton"
            style="@style/MenuNavListButton"
            android:layout_width="90dp"
            android:drawableTop="@drawable/bookmarks_folder"
            android:text="@string/bookmarks" />

        <View
            android:id="@+id/divider25"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#999" />

        <HorizontalScrollView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/resolutionButton"
                    style="@style/MenuNavToggleButton"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/resolution"
                    android:text="@string/resolution" />

                <Button
                    android:id="@+id/aspectRatioButton"
                    style="@style/MenuNavToggleButton"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/aspect_ratio"
                    android:text="@string/aspect_ratio" />

            </LinearLayout>
        </HorizontalScrollView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/imageNavButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bookmarkListViewTypeButton"
            style="@style/MenuNavButton"
            android:layout_height="@dimen/navButtonSize"
            android:drawableTop="@drawable/list_view"
            android:text="@string/view" />

        <Button
            android:id="@+id/bookmarkListCancelButton"
            style="@style/MenuNavButton"
            android:layout_width="60dp"
            android:layout_height="@dimen/navButtonSize"
            android:drawableTop="@drawable/cancel"
            android:text="@android:string/cancel" />

        <com.selfsimilartech.fractaleye.GradientButton
            android:id="@+id/bookmarkListDoneButton"
            style="@style/MenuNavButton"
            android:layout_width="60dp"
            android:layout_height="@dimen/navButtonSize"
            android:drawableTop="@drawable/done"
            android:foregroundGravity="clip_vertical|clip_horizontal"
            android:text="@android:string/ok" />

    </LinearLayout>

</LinearLayout>