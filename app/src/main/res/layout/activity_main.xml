<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.selfsimilartech.fractaleye.MainActivity">


    <android.support.constraint.ConstraintLayout
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:orientation="vertical">

        <View
            android:id="@+id/falseBottom"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent" >

        </View>


        <LinearLayout
            android:id="@+id/displayParams"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/display_params_bg_visible"
            android:orientation="vertical"
            android:paddingLeft="12dp"
            android:paddingTop="8dp"
            android:paddingRight="12dp"
            android:paddingBottom="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/displayReaction"
                style="@style/TextDark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reaction"
                android:textAllCaps="true"
                android:textSize="15sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/displayParamRow1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/displayParamName1"
                    style="@style/TextDark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/display_param1"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/displayParam1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/displayParamRow2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/displayParamName2"
                    style="@style/TextDark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/display_param2"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/displayParam2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/displayParamRow3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/displayParamName3"
                    style="@style/TextDark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/display_param3"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/displayParam3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@id/progressBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/leftArrow"
                android:contentDescription="@string/left_arrow"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:rotation="90"
                android:scaleType="centerInside"
                app:srcCompat="@android:drawable/arrow_down_float" />

            <HorizontalScrollView
                android:id="@+id/buttonScroll"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fillViewport="true"
                android:scrollbarStyle="outsideInset">

                <LinearLayout
                    android:id="@+id/uiQuick"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/paramButton4"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:background="@drawable/round_button_unselected"
                        android:text="@string/param4"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/paramButton3"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_marginStart="5dp"
                        android:background="@drawable/round_button_unselected"
                        android:text="@string/param3"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/paramButton2"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_marginStart="5dp"
                        android:background="@drawable/round_button_unselected"
                        android:text="@string/param2"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/paramButton1"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_marginStart="5dp"
                        android:background="@drawable/round_button_unselected"
                        android:text="@string/param1"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <ImageButton
                        android:id="@+id/colorButton"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_marginStart="5dp"
                        android:background="@drawable/round_button_unselected"
                        android:contentDescription="@string/reaction_color"
                        android:scaleType="fitCenter"
                        android:src="@drawable/color"
                        android:tint="#fff" />

                    <ImageButton
                        android:id="@+id/transformButton"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_marginStart="5dp"
                        android:background="@drawable/round_button_unselected"
                        android:contentDescription="@string/reaction_position"
                        android:scaleType="fitCenter"
                        android:src="@drawable/transform"
                        android:tint="#fff" />

                </LinearLayout>
            </HorizontalScrollView>

            <ImageView
                android:id="@+id/rightArrow"
                android:contentDescription="@string/right_arrow"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:rotation="270"
                android:scaleType="fitCenter"
                app:srcCompat="@android:drawable/arrow_down_float" />

            <ImageButton
                android:id="@+id/uiFullButton"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/round_button_unselected"
                android:contentDescription="@string/menu"
                android:scaleType="fitCenter"
                android:src="@drawable/menu"
                android:tint="#fff" />

        </LinearLayout>


        <ProgressBar
            android:id="@+id/progressBar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/colorHalfTransparent"
            android:progressBackgroundTint="@color/colorTransparent"
            app:layout_constraintBottom_toTopOf="@id/uiFull" />


        <LinearLayout
            android:id="@+id/uiFull"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="bottom"
            android:background="#333"
            android:orientation="vertical"
            android:scrollbarSize="4dp"
            app:layout_constraintBottom_toBottomOf="@id/falseBottom">

            <android.support.design.widget.TabLayout
                android:id="@+id/uiFullTabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#333"
                android:clickable="false"
                android:focusable="false">

                <android.support.design.widget.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:focusable="false"
                    android:text="@string/tab_fractal" />

                <android.support.design.widget.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:focusable="false"
                    android:text="@string/tab_settings" />
            </android.support.design.widget.TabLayout>

            <android.support.v4.view.ViewPager
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#222" />
        </LinearLayout>


    </android.support.constraint.ConstraintLayout>


</FrameLayout>
