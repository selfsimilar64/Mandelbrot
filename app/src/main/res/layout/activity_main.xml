<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.matt.gputest.MainActivity">


    <!-- FRACTAL / QUICK UI CONTAINER -->

    <android.support.constraint.ConstraintLayout
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:orientation="vertical">

        <!-- UI -->

        <LinearLayout
            android:id="@+id/displayParams"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorHalfTransparent"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:paddingStart="10dip"
            android:paddingTop="5dip"
            android:paddingBottom="5dip"
            app:layout_constraintBottom_toTopOf="@id/progressBar">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/xCoordText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/colorDarkText" />

                <TextView
                    android:id="@+id/yCoordText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/colorDarkText" />

                <TextView
                    android:id="@+id/scaleText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/colorDarkText" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/frequencyText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/colorDarkText" />

                <TextView
                    android:id="@+id/phaseText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/colorDarkText" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/quickUI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom|end"
            android:orientation="vertical"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            app:layout_constraintBottom_toTopOf="@id/displayParams">

            <Button
                android:id="@+id/fullUIButton"
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:text="Full UI" />

            <Button
                android:id="@+id/paramButton1"
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:text="@string/param1" />

            <Button
                android:id="@+id/colorButton"
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:text="@string/color" />

            <Button
                android:id="@+id/transformButton"
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:text="@string/transform" />

            <SeekBar
                android:id="@+id/maxIterBar"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:progress="25" />

        </LinearLayout>


        <ProgressBar
            android:id="@+id/progressBar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="3dip"
            android:background="@color/colorHalfTransparent"
            android:progressBackgroundTint="@color/colorTransparent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <LinearLayout
            android:id="@+id/fullUI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="vertical">

            <android.support.design.widget.TabLayout
                android:id="@+id/fullUITabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#333">

            </android.support.design.widget.TabLayout>

            <android.support.v4.view.ViewPager
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#222" />
        </LinearLayout>



    </android.support.constraint.ConstraintLayout>


</FrameLayout>
