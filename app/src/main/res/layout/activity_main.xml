<?xml version="1.0" encoding="utf-8"?>
<android.widget.FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.matt.gputest.MainActivity">


    <ProgressBar
        android:id="@+id/progressBar"
        style="@style/ProgressBar"
        android:layout_width="match_parent"
        android:layout_height="3dip" />

    <LinearLayout
        android:id="@+id/fullUI"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <android.support.design.widget.TabLayout
            android:id="@+id/fullUITabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#222">

        </android.support.design.widget.TabLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/quickUI"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|end"
        android:orientation="vertical"
        android:paddingStart="15dp"
        android:paddingEnd="15dp">

        <Button
            android:id="@+id/fullUIButton"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:text="Full UI" />

        <Button
            android:id="@+id/paramButton1"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:text="@string/param1" />

        <Button
            android:id="@+id/colorButton"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:text="@string/color" />

        <Button
            android:id="@+id/transformButton"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:text="@string/transform" />

        <SeekBar
            android:id="@+id/maxIterBar"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:progress="25" />

    </LinearLayout>

</android.widget.FrameLayout>
