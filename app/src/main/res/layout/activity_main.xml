<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.matt.gputest.MainActivity">


    <android.support.constraint.ConstraintLayout
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/displayParams"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorHalfTransparent"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:paddingStart="10dip"
            android:paddingTop="5dip"
            android:paddingBottom="5dip"
            app:layout_constraintBottom_toTopOf="@id/progressBar">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/xCoordDisplay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/colorDarkText" />

                <TextView
                    android:id="@+id/yCoordDisplay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/colorDarkText" />

                <TextView
                    android:id="@+id/scaleDisplay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/colorDarkText" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/frequencyDisplay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/colorDarkText" />

                <TextView
                    android:id="@+id/phaseDisplay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/colorDarkText" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/uiQuick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom|end"
            android:orientation="vertical"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            app:layout_constraintBottom_toTopOf="@id/displayParams">

            <Button
                android:id="@+id/paramButton1"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/round_button_unselected"
                android:text="P1"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/transformButton"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/round_button_unselected"
                android:scaleType="centerInside"
                android:src="@drawable/baseline_open_with_black_36"
                android:tint="#fff" />

            <ImageButton
                android:id="@+id/colorButton"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/round_button_unselected"
                android:scaleType="centerInside"
                android:src="@drawable/baseline_color_lens_black_36"
                android:tint="#fff" />

        </LinearLayout>


        <ProgressBar
            android:id="@+id/progressBar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="3dip"
            android:background="@color/colorHalfTransparent"
            android:progressBackgroundTint="@color/colorTransparent"
            app:layout_constraintBottom_toTopOf="@id/uiFull" />


        <LinearLayout
            android:id="@+id/uiFull"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_gravity="bottom"
            android:background="#333"
            android:orientation="vertical"
            android:scrollbarSize="4dp"
            app:layout_constraintBottom_toBottomOf="parent">

            <View
                android:id="@+id/uiFullHandle"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="@color/black"
                android:clickable="false"
                android:focusable="false"
                android:foreground="@android:drawable/button_onoff_indicator_off"
                android:foregroundGravity="clip_horizontal|center|center_horizontal"
                android:foregroundTint="#ddd" />

            <android.support.design.widget.TabLayout
                android:id="@+id/uiFullTabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#333"
                android:clickable="false"
                android:focusable="false">

                <android.support.design.widget.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/equation" />

                <android.support.design.widget.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Color" />

                <android.support.design.widget.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Settings" />
            </android.support.design.widget.TabLayout>

            <android.support.v4.view.ViewPager
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#222" />
        </LinearLayout>


    </android.support.constraint.ConstraintLayout>


</FrameLayout>
