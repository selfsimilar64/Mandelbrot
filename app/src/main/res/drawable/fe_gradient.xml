<?xml version="1.0" encoding="utf-8"?>

<!-- The android:opacity=”opaque” line — this is critical in preventing a flash of black as your theme transitions. -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" android:opacity="opaque">

    <item android:gravity="center" android:width="25dp" android:height="@dimen/proIndicatorThickness" android:start="-75dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/fractaleye1"
                android:endColor="@color/fractaleye2"
                android:angle="0" />
        </shape>
    </item>

    <item android:gravity="center" android:width="25dp" android:height="@dimen/proIndicatorThickness" android:start="-25dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/fractaleye2"
                android:endColor="@color/fractaleye3"
                android:angle="0" />
        </shape>
    </item>

    <item android:gravity="center" android:width="25dp" android:height="@dimen/proIndicatorThickness" android:start="25dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/fractaleye3"
                android:endColor="@color/fractaleye4"
                android:angle="0" />
        </shape>
    </item>

    <item android:gravity="center" android:width="25dp" android:height="@dimen/proIndicatorThickness" android:start="75dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/fractaleye4"
                android:endColor="@color/fractaleye5"
                android:angle="0" />
        </shape>
    </item>

</layer-list>