<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:width="5dp"
        android:height="@dimen/hueSelectorLayoutWidth">
        <shape android:shape="rectangle">
            <size android:width="5dp" android:height="@dimen/hueSelectorLayoutWidth"/>
            <solid android:color="@color/black"/>
        </shape>
    </item>
    <item
        android:width="3dp"
        android:height="@dimen/hueSelectorLayoutWidth"
        android:start="1dp">
        <shape android:shape="rectangle">
            <size android:width="3dp" android:height="@dimen/hueSelectorLayoutWidth"/>
            <solid android:color="@color/white"/>
        </shape>
    </item>
</layer-list>